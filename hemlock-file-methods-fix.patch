+HmlValue hml_file_write_bytes(HmlValue file, HmlValue data) {
+    if (file.type != HML_VAL_FILE) {
+        fprintf(stderr, "Error: write_bytes() expects file object\n");
+        exit(1);
+    }
+
+    HmlFileHandle *fh = file.as.as_file;
+    if (fh->closed) {
+        fprintf(stderr, "Error: Cannot write to closed file '%s'\n", fh->path);
+        exit(1);
+    }
+
+    size_t bytes_written = 0;
+    if (data.type == HML_VAL_BUFFER) {
+        HmlBuffer *buf = data.as.as_buffer;
+        bytes_written = fwrite(buf->data, 1, buf->length, (FILE*)fh->fp);
+    } else if (data.type == HML_VAL_STRING) {
+        // Also allow writing strings as bytes
+        HmlString *str = data.as.as_string;
+        bytes_written = fwrite(str->data, 1, str->length, (FILE*)fh->fp);
+    } else {
+        fprintf(stderr, "Error: write_bytes() expects buffer or string argument\n");
+        exit(1);
+    }
+
+    return hml_val_i32((int32_t)bytes_written);
